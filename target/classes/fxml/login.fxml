<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" styleClass="login-background" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.espresso.client.controllers.LoginController">
   <center>
      <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <VBox fx:id="loginPane" alignment="CENTER" maxWidth="350.0" spacing="15.0" styleClass="login-card">
               <children>
                  <Label styleClass="login-title" text="Espresso Chat">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
                  <Label styleClass="login-subtitle" text="Sign in to your account" />
                  <TextField fx:id="loginUserIdField" promptText="User ID" styleClass="login-field" />
                  <PasswordField fx:id="loginPasswordField" promptText="Password" styleClass="login-field" />
                  <Button fx:id="loginButton" defaultButton="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="login-button" text="Login" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
               </padding>
            </VBox>
            <VBox fx:id="registerPane" alignment="CENTER" maxWidth="350.0" spacing="15.0" styleClass="login-card" visible="false">
               <children>
                  <Label styleClass="login-title" text="Create Account">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
                  <Label styleClass="login-subtitle" text="Join Espresso Chat" />
                  <TextField fx:id="registerUserIdField" promptText="User ID" styleClass="login-field" />
                  <TextField fx:id="registerDisplayNameField" promptText="Display Name" styleClass="login-field" />
                  <PasswordField fx:id="registerPasswordField" promptText="Password" styleClass="login-field" />
                  <PasswordField fx:id="registerConfirmPasswordField" promptText="Confirm Password" styleClass="login-field" />
                  <Button fx:id="registerButton" defaultButton="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="login-button" text="Register" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
               </padding>
            </VBox>
         </children>
      </StackPane>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <ToggleButton fx:id="toggleModeButton" mnemonicParsing="false" styleClass="toggle-mode-button" text="Create Account" />
         </children>
      </HBox>
   </bottom>
</BorderPane>