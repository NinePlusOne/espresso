<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="500.0" styleClass="emoji-picker" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.espresso.client.controllers.EmojiPickerController">
   <top>
      <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="searchField" promptText="Search emojis..." HBox.hgrow="ALWAYS" />
            <Button fx:id="searchButton" mnemonicParsing="false" text="Search" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <TabPane fx:id="emojiTabPane" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab fx:id="recentTab" text="Recent" />
          <Tab fx:id="smileyTab" text="Smileys" />
            <Tab fx:id="objectsTab" text="Objects" />
            <Tab fx:id="animalsTab" text="Animals" />
            <Tab fx:id="foodTab" text="Food" />
            <Tab fx:id="travelTab" text="Travel" />
            <Tab fx:id="symbolsTab" text="Symbols" />
        </tabs>
      </TabPane>
   </center>
   <bottom>
      <ScrollPane fx:id="searchScrollPane" fitToWidth="true" visible="false" BorderPane.alignment="CENTER">
         <content>
            <VBox fx:id="searchResultsBox" spacing="10.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </bottom>
</BorderPane>